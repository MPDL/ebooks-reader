<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="32.5dp">

    <ImageView
        android:id="@+id/downloadedBookCoverImageView"
        android:layout_width="128.5dp"
        android:layout_height="176.5dp"
        android:src="@drawable/ic_mupdf"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/desc_book_cover_image_view"/>

    <CheckBox
        android:id="@+id/editBookCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/downloadedBookCoverImageView"
        android:layout_alignEnd="@id/downloadedBookCoverImageView"
        android:buttonTint="@color/colorPrimary" />

    <TextView
        android:id="@+id/downloadedBookTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/downloadedBookCoverImageView"
        android:layout_marginTop="8.5dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>